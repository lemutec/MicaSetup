<Window x:Class="Squircle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Squircle"
        Background="#E4E4E4" Width="600" Height="600">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button Content="Create" Command="{Binding CreateSquircleCommand}"/>
            <Button Content="Save" Command="{Binding SaveSquircleCommand}" Margin="10,0,0,0"/>
            <Button Content="Folder" Command="{Binding FolderCommand}" Margin="10,0,0,0"/>
        </StackPanel>
        <Image Source="{Binding ImageSource}" Stretch="None"/>
    </StackPanel>
</Window>
