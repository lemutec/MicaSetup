<wui:FluentWindow x:Class="MakeMui.Views.AboutWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:MakeMui"
                  xmlns:wui="http://schemas.lepo.co/wpfui/2022/xaml"
                  Title="About"
                  Width="250"
                  Height="150"
                  MinWidth="0"
                  MinHeight="0"
                  wui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                  wui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                  Background="#E4E4E4"
                  ExtendsContentIntoTitleBar="True"
                  ResizeMode="CanMinimize"
                  WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid Margin="24,42,24,24">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <Image Width="48"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Source="pack://application:,,,/Resources/Images/Favicon.png">
                    <Image.RenderTransform>
                        <RotateTransform Angle="0" CenterX="24" CenterY="24" />
                    </Image.RenderTransform>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="RenderTransform.Angle">
                                        <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0" />
                                        <EasingDoubleKeyFrame KeyTime="0:0:0.25" Value="10" />
                                        <EasingDoubleKeyFrame KeyTime="0:0:0.75" Value="-10" />
                                        <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0" />
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>
                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Foreground="#EEEE" Text="MakeMuiW" />
                    <TextBlock Margin="0,6,0,0"
                               Foreground="#AAAA"
                               Text="{Binding Version}" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <wui:TitleBar Title="About"
                      ShowMaximize="False"
                      ShowMinimize="False" />
    </Grid>
</wui:FluentWindow>
