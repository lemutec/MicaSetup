<wui:FluentWindow x:Class="MakeMui.Views.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:control="clr-namespace:MakeMui.Design.Controls"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                  xmlns:local="clr-namespace:MakeMui"
                  xmlns:wui="http://schemas.lepo.co/wpfui/2022/xaml"
                  Title="MakeMuiW"
                  Width="1100"
                  Height="680"
                  wui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                  wui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                  Background="#E4E4E4"
                  ExtendsContentIntoTitleBar="True"
                  ResizeMode="CanMinimize"
                  WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="CellStyle"
               BasedOn="{StaticResource DefaultDataGridCellStyle}"
               TargetType="{x:Type DataGridCell}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border x:Name="Border"
                                HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                BorderThickness="0"
                                SnapsToDevicePixels="True">
                            <ContentPresenter FrameworkElement.HorizontalAlignment="Center"
                                              FrameworkElement.VerticalAlignment="Center"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid Margin="0,42,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="8,8,8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <wui:TextBox IsReadOnly="True"
                             PlaceholderText="Mui-language XAML Folder ..."
                             Text="{Binding Folder}" />
                <Button Grid.Column="1"
                        MinWidth="45"
                        Margin="8,0,0,0"
                        Command="{Binding OpenFolderCommand}">
                    <Button.Content>
                        <wui:FontIcon FontFamily="{DynamicResource FluentSystemIcons}"
                                      FontSize="16"
                                      Glyph="&#xf42f;" />
                    </Button.Content>
                </Button>
            </Grid>
            <DataGrid x:Name="dataGrid"
                      Grid.Row="1"
                      Margin="8,8,8,8"
                      AutoGenerateColumns="False"
                      ColumnHeaderHeight="30"
                      RowHeight="30"
                      SelectionMode="Single"
                      SelectionUnit="FullRow">
                <DataGrid.ColumnHeaderStyle>
                    <Style BasedOn="{StaticResource DefaultDataGridColumnHeaderStyle}" TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center"
                                               Text="{TemplateBinding Content}"
                                               TextWrapping="Wrap" />
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

            </DataGrid>
        </Grid>
        <wui:TitleBar Title="MakeMuiW">
            <wui:TitleBar.Icon>
                <wui:ImageIcon Source="pack://application:,,,/Resources/Images/Favicon.png" />
            </wui:TitleBar.Icon>
            <wui:TitleBar.Header>
                <StackPanel>
                    <wui:Button Width="44"
                                Height="30"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                CornerRadius="0"
                                Icon="{wui:SymbolIcon CaretDown24}">
                        <wui:Button.ContextMenu>
                            <ContextMenu FontSize="12">
                                <MenuItem Command="{Binding ShowGitHubCommand}"
                                          FontSize="12"
                                          Header="GitHub">
                                    <MenuItem.Icon>
                                        <wui:FontIcon FontFamily="{DynamicResource FluentSystemIcons}"
                                                      FontSize="16"
                                                      Glyph="&#xf4e3;" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Command="{Binding ShowAboutCommand}"
                                          FontSize="12"
                                          Header="About">
                                    <MenuItem.Icon>
                                        <wui:FontIcon FontFamily="{DynamicResource FluentSystemIcons}"
                                                      FontSize="16"
                                                      Glyph="&#xf3f1;" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </wui:Button.ContextMenu>
                        <i:Interaction.Behaviors>
                            <control:LeftContextMenuBehavior PlacementOffsetX="0" PlacementOffsetY="0" />
                        </i:Interaction.Behaviors>
                    </wui:Button>
                </StackPanel>
            </wui:TitleBar.Header>
        </wui:TitleBar>
    </Grid>
</wui:FluentWindow>
