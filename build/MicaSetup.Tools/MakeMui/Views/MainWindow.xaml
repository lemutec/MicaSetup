<ui:FluentWindow x:Class="MakeMui.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:b="http://schemas.github.com/computedbehaviors/2024/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                 xmlns:local="clr-namespace:MakeMui"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 Title="MakeMuiW"
                 Width="1100"
                 Height="680"
                 ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                 ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                 Background="#E4E4E4"
                 ExtendsContentIntoTitleBar="True"
                 ResizeMode="CanMinimize"
                 WindowBackdropType="Mica"
                 WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="CellStyle"
               BasedOn="{StaticResource DefaultDataGridCellStyle}"
               TargetType="{x:Type DataGridCell}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border x:Name="Border"
                                HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                BorderThickness="0"
                                SnapsToDevicePixels="True">
                            <ContentPresenter FrameworkElement.HorizontalAlignment="Center"
                                              FrameworkElement.VerticalAlignment="Center"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid Margin="0,42,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="8,8,8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ui:TextBox IsReadOnly="True"
                            PlaceholderText="Mui-language XAML Folder ..."
                            Text="{Binding Folder}" />
                <Button Grid.Column="1"
                        MinWidth="45"
                        Margin="8,0,0,0"
                        Command="{Binding OpenFolderCommand}">
                    <Button.Content>
                        <ui:FontIcon FontFamily="{DynamicResource FluentSystemIcons}"
                                     FontSize="16"
                                     Glyph="&#xf42f;" />
                    </Button.Content>
                </Button>
            </Grid>
            <DataGrid x:Name="dataGrid"
                      Grid.Row="1"
                      Margin="8,8,8,8"
                      AutoGenerateColumns="False"
                      ColumnHeaderHeight="30"
                      RowHeight="30"
                      SelectionMode="Single"
                      SelectionUnit="FullRow">
                <DataGrid.ColumnHeaderStyle>
                    <Style BasedOn="{StaticResource DefaultDataGridColumnHeaderStyle}" TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center"
                                               Text="{TemplateBinding Content}"
                                               TextWrapping="Wrap" />
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

            </DataGrid>
        </Grid>
        <ui:TitleBar Title="MakeMuiW">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Resources/Images/Favicon.png" />
            </ui:TitleBar.Icon>
            <ui:TitleBar.Header>
                <StackPanel>
                    <ui:Button Width="44"
                               Height="30"
                               Background="Transparent"
                               BorderBrush="Transparent"
                               CornerRadius="0"
                               Icon="{ui:SymbolIcon CaretDown24}">
                        <ui:Button.ContextMenu>
                            <ContextMenu FontSize="12">
                                <MenuItem Command="{Binding ShowGitHubCommand}"
                                          FontSize="12"
                                          Header="GitHub">
                                    <MenuItem.Icon>
                                        <ui:FontIcon FontFamily="{DynamicResource FluentSystemIcons}"
                                                     FontSize="16"
                                                     Glyph="&#xf4e3;" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Command="{Binding ShowAboutCommand}"
                                          FontSize="12"
                                          Header="About">
                                    <MenuItem.Icon>
                                        <ui:FontIcon FontFamily="{DynamicResource FluentSystemIcons}"
                                                     FontSize="16"
                                                     Glyph="&#xf3f1;" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ui:Button.ContextMenu>
                        <i:Interaction.Behaviors>
                            <b:LeftContextMenuBehavior PlacementOffsetX="0" PlacementOffsetY="0" />
                        </i:Interaction.Behaviors>
                    </ui:Button>
                </StackPanel>
            </ui:TitleBar.Header>
        </ui:TitleBar>
    </Grid>
</ui:FluentWindow>
