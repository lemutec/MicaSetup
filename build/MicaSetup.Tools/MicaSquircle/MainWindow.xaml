<wui:FluentWindow x:Class="MicaSquircle.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:MicaSquircle"
                  xmlns:wui="http://schemas.lepo.co/wpfui/2022/xaml"
                  Title="MicaSquircle"
                  Width="640"
                  Height="680"
                  wui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                  wui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                  Background="#E4E4E4"
                  ResizeMode="CanMinimize">
    <Window.Resources>
        <local:IconTypeValueConverter x:Key="IconTypeValueConverter" />
    </Window.Resources>
    <Grid>
        <StackPanel Margin="0,42,0,0">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <RadioButton Content="Normal" IsChecked="{Binding IconType, Converter={StaticResource IconTypeValueConverter}, ConverterParameter={x:Static local:IconType.Normal}}" />
                <RadioButton Content="Setup" IsChecked="{Binding IconType, Converter={StaticResource IconTypeValueConverter}, ConverterParameter={x:Static local:IconType.Setup}}" />
                <RadioButton Content="Uninst" IsChecked="{Binding IconType, Converter={StaticResource IconTypeValueConverter}, ConverterParameter={x:Static local:IconType.Uninst}}" />
                <RadioButton Content="Raw" IsChecked="{Binding IconType, Converter={StaticResource IconTypeValueConverter}, ConverterParameter={x:Static local:IconType.Raw}}" />
            </StackPanel>
            <StackPanel Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <CheckBox Content="PNG" IsChecked="{Binding CreatePng}" />
                <CheckBox Content="ICO" IsChecked="{Binding CreateIco}" />
            </StackPanel>
            <StackPanel Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Button MinWidth="80"
                        Command="{Binding CreateSquircleCommand}"
                        Content="Create"
                        Visibility="Collapsed" />
                <Button MinWidth="80"
                        Margin="10,0,0,0"
                        Command="{Binding SaveSquircleCommand}"
                        Content="Save" />
                <Button MinWidth="80"
                        Margin="10,0,0,0"
                        Command="{Binding FolderCommand}"
                        Content="Folder" />
            </StackPanel>
            <Border Width="512"
                    Height="512"
                    Margin="0,6,0,0"
                    CornerRadius="16">
                <Border.Background>
                    <ImageBrush AlignmentY="Top"
                                ImageSource="Resources/Images/background-b.png"
                                RenderOptions.BitmapScalingMode="NearestNeighbor"
                                Stretch="UniformToFill"
                                TileMode="Tile"
                                Viewport="0,0,32,32"
                                ViewportUnits="Absolute" />
                </Border.Background>
                <Image Source="{Binding ImageSource}" Stretch="None" />
            </Border>
        </StackPanel>
        <wui:TitleBar Title="MicaSquircle" />
    </Grid>
</wui:FluentWindow>
