<Application x:Class="MakeMica.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MakeMica"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="pack://application:,,,/Design/Controls/CodeEditor/CodeBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Design/Controls/TitleBar/TitleBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="SymbolThemeFontFamily">pack://application:,,,/Resources/Fonts/Segoe Fluent Icons.ttf#Segoe Fluent Icons</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
