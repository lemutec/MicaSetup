<wui:FluentWindow x:Class="MakeMica.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:MakeMica"
                  xmlns:wui="http://schemas.lepo.co/wpfui/2022/xaml"
                  Title="MicaSquircle"
                  Width="640"
                  Height="680"
                  wui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                  wui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                  Background="#E4E4E4"
                  ExtendsContentIntoTitleBar="True"
                  ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Margin="0,42,0,0">
            <StackPanel Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Button MinWidth="80"
                        Margin="10,0,0,0"
                        Command="{Binding BuildCommand}"
                        Content="Build" />
                <Button MinWidth="80"
                        Margin="10,0,0,0"
                        Command="{Binding FolderCommand}"
                        Content="Folder" />
            </StackPanel>
        </StackPanel>
        <wui:TitleBar Title="MakeMica" />
    </Grid>
</wui:FluentWindow>
