<wui:FluentWindow x:Class="MakeMica.Views.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:control="clr-namespace:MakeMica.Design.Controls"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:MakeMica"
                  xmlns:wui="http://schemas.lepo.co/wpfui/2022/xaml"
                  Title="MicaSquircle"
                  Width="640"
                  Height="680"
                  wui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                  wui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                  Background="#E4E4E4"
                  ExtendsContentIntoTitleBar="True"
                  ResizeMode="CanMinimize">
    <Grid>
        <Grid Margin="0,42,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Command="{Binding NewCommand}" Header="New" />
                    <MenuItem Command="{Binding OpenCommand}" Header="Open" />
                    <Separator MinWidth="120" />
                    <MenuItem Command="{Binding SaveCommand}" Header="Save" />
                    <MenuItem Command="{Binding SaveAsCommand}" Header="Save As" />
                    <Separator MinWidth="120" />
                    <MenuItem Command="{Binding ExitCommand}" Header="Exit" />
                </MenuItem>
            </Menu>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Margin="8">
                    <control:JsonCodeBox x:Name="JsonCodeBox" Code="{Binding Code}" />
                    <Button HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding BeautifyCommand}"
                            Content="Beautify" />
                </Grid>
                <StackPanel Grid.Row="1"
                            Margin="8"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <Button MinWidth="80"
                            Margin="10,0,0,0"
                            Command="{Binding BuildCommand}"
                            Content="Build" />
                    <Button MinWidth="80"
                            Margin="10,0,0,0"
                            Command="{Binding FolderCommand}"
                            Content="Folder" />
                </StackPanel>
            </Grid>

        </Grid>
        <wui:TitleBar Title="MakeMica" />
    </Grid>
</wui:FluentWindow>
