<wui:FluentWindow x:Class="MakeIcon.Views.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:control="clr-namespace:MakeIcon.Design.Controls"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                  xmlns:local="clr-namespace:MakeIcon.Views"
                  xmlns:wui="http://schemas.lepo.co/wpfui/2022/xaml"
                  Title="MakeIconW"
                  Width="500"
                  Height="600"
                  wui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                  wui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                  AllowDrop="True"
                  Background="#E4E4E4"
                  Drop="OnDrop"
                  ExtendsContentIntoTitleBar="True"
                  ResizeMode="CanMinimize">
    <Window.Resources>
        <local:IconTypeValueConverter x:Key="IconTypeValueConverter" />
    </Window.Resources>
    <Grid>
        <StackPanel Margin="0,42,0,0">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <RadioButton Content="Normal" IsChecked="{Binding IconType, Converter={StaticResource IconTypeValueConverter}, ConverterParameter={x:Static local:IconType.Normal}}" />
                <RadioButton Content="Setup" IsChecked="{Binding IconType, Converter={StaticResource IconTypeValueConverter}, ConverterParameter={x:Static local:IconType.Setup}}" />
                <RadioButton Content="Uninst" IsChecked="{Binding IconType, Converter={StaticResource IconTypeValueConverter}, ConverterParameter={x:Static local:IconType.Uninst}}" />
            </StackPanel>
            <StackPanel Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <CheckBox Content="PNG" IsChecked="{Binding CreatePng}" />
                <CheckBox Content="ICO" IsChecked="{Binding CreateIco}" />
            </StackPanel>
            <StackPanel Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Button MinWidth="80"
                        Command="{Binding OpenImageCommand}"
                        Content="Open" />
                <Button MinWidth="80"
                        Margin="24,0,0,0"
                        Command="{Binding SaveImageCommand}"
                        Content="Save" />
            </StackPanel>
            <Border Width="420"
                    Height="420"
                    Margin="0,8,0,0"
                    CornerRadius="16">
                <Border.Background>
                    <ImageBrush AlignmentY="Top"
                                ImageSource="pack://application:,,,/Resources/Images/background-b.png"
                                RenderOptions.BitmapScalingMode="NearestNeighbor"
                                Stretch="UniformToFill"
                                TileMode="Tile"
                                Viewport="0,0,32,32"
                                ViewportUnits="Absolute" />
                </Border.Background>
                <Image Source="{Binding ImageSource}" Stretch="None" />
            </Border>
        </StackPanel>
        <wui:TitleBar Title="MakeIconW">
            <wui:TitleBar.Icon>
                <wui:ImageIcon Source="pack://application:,,,/Resources/Images/Favicon.png" />
            </wui:TitleBar.Icon>
            <wui:TitleBar.Header>
                <StackPanel>
                    <wui:Button Width="44"
                                Height="30"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                CornerRadius="0"
                                Icon="{wui:SymbolIcon CaretDown24}">
                        <wui:Button.ContextMenu>
                            <ContextMenu FontSize="12">
                                <MenuItem Command="{Binding ShowGitHubCommand}"
                                          FontSize="12"
                                          Header="GitHub">
                                    <MenuItem.Icon>
                                        <wui:FontIcon FontFamily="{DynamicResource FluentSystemIcons}"
                                                      FontSize="16"
                                                      Glyph="&#xf4e3;" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Command="{Binding ShowAboutCommand}"
                                          FontSize="12"
                                          Header="About">
                                    <MenuItem.Icon>
                                        <wui:FontIcon FontFamily="{DynamicResource FluentSystemIcons}"
                                                      FontSize="16"
                                                      Glyph="&#xf3f1;" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </wui:Button.ContextMenu>
                        <i:Interaction.Behaviors>
                            <control:LeftContextMenuBehavior PlacementOffsetX="0" PlacementOffsetY="0" />
                        </i:Interaction.Behaviors>
                    </wui:Button>
                </StackPanel>
            </wui:TitleBar.Header>
        </wui:TitleBar>
    </Grid>
</wui:FluentWindow>
